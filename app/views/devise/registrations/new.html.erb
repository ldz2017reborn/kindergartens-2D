<div class="col-md-4  col-md-offset-4">
  <div class="auth">
    <div id="big-form" class="well auth-box">
      <h1 class="text-center">注册</h1>
      <hr>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,:label => false, placeholder: '请输入常用的邮箱地址', error: '请输入邮箱地址', required: true, autofocus: true %>
          <%= f.input :password,:label => false, placeholder: '请输入用户名', error: '请输入用户名', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "注册" %>
        </div>
      <% end %>
      <div class="account">
              <%= link_to "已有帐号，立即登录", new_session_path(resource_name) %><br />
            </div>
    </div>
  </div>
</div>
